# MCP-Mem0 Memory System Configuration
# Скопируйте этот файл в .env и настройте под ваши нужды

# ============================================================================
# ИСПРАВЛЕННЫЕ ПРОБЛЕМЫ (ВЕРСИЯ 1.0.1)
# ============================================================================
# ✅ Удалена настройка embedding_dims (не поддерживается в новой версии Mem0)
# ✅ Исправлен путь к utils.py в Dockerfile.unified 
# ✅ Добавлены Windows-совместимые инструкции запуска
# ✅ Исправлены проблемы с спамом контейнеров

# ============================================================================
# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================================================

# OpenAI API Key (ОБЯЗАТЕЛЬНО)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# АРХИТЕКТУРА ХРАНЕНИЯ ДАННЫХ (выберите один из вариантов)
# ============================================================================

# Вариант 1: Использование Supabase (облачное решение)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Вариант 2: Локальный PostgreSQL (с Docker)
POSTGRES_URL=postgresql://postgres:postgres123@localhost:5432/unified_memory

# ============================================================================
# NEO4J ГРАФ БАЗА ДАННЫХ
# ============================================================================

# Neo4j настройки (для графовых связей между сущностями)
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=graphmemory123

# ============================================================================
# КОНФИГУРАЦИЯ СЕРВЕРА
# ============================================================================

# Порт для Memory Server
MEMORY_SERVER_PORT=8051

# Уровень логирования (debug, info, warning, error)
LOG_LEVEL=info

# Окружение (development, testing, production)
ENVIRONMENT=development

# ============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ============================================================================

# Redis для кэширования (опционально)
REDIS_URL=redis://localhost:6379

# Health check интервал (секунды)
HEALTH_CHECK_INTERVAL=30

# Максимальное количество попыток инициализации
MAX_INITIALIZATION_ATTEMPTS=5

# Таймаут для HTTP запросов (секунды)
HTTP_TIMEOUT=30

# ============================================================================
# НАСТРОЙКИ MEM0
# ============================================================================

# Модель для LLM
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1500

# Модель для embeddings
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# МОНИТОРИНГ И МЕТРИКИ (опционально)
# ============================================================================

# Prometheus метрики
ENABLE_METRICS=true
METRICS_PORT=9000

# Grafana admin пароль
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================================================
# БЕЗОПАСНОСТЬ
# ============================================================================

# Секретный ключ для подписи токенов
SECRET_KEY=your_secret_key_here

# CORS настройки (разделенные запятыми)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting (запросов в минуту)
RATE_LIMIT_PER_MINUTE=100

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Векторное измерение для embeddings
VECTOR_DIMENSION=1536

# Количество ближайших соседей для поиска
SEARCH_K=10

# Минимальный порог сходства для поиска
MIN_SIMILARITY_THRESHOLD=0.7

# Максимальный размер батча для обработки
MAX_BATCH_SIZE=100

# Таймаут для операций с базой данных (секунды)
DB_TIMEOUT=10

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Автоматическая перезагрузка в dev режиме
AUTO_RELOAD=true

# Подробные логи ошибок
DEBUG_MODE=true

# Сохранение промежуточных результатов
SAVE_INTERMEDIATE_RESULTS=false 